@model List<Dish>
@{
    ViewData["Title"] = "Menu";
}
<div class="container">
    <div class="row">
        @foreach(var item in Model)
        {
            <div class="col-6">
                <div class="d-flex justify-content-center">
                    <h4>@item.Name</h4>
                </div>
                <div class="d-flex justify-content-center">
                    <img src="@item.ImageUrl" style="width: 70%; object-fit:cover"/>
                </div>
                <div class="d-flex justify-content-center">
                    @item.Price.ToString()$
                </div>
            </div>
        }
    </div>
</div>
